# ===========================================
# Mission Control — Environment Variables
# ===========================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# DEPENDENCIES:
#   Required: Python 3.11+, PostgreSQL 16+ (with pgvector), GitHub Copilot CLI
#   Optional: Node.js 18+ (GitHub MCP via npx), Redis, Telegram Bot, DigitalOcean

# ===========================================
# Database (Required)
# ===========================================
# PostgreSQL 16+ with pgvector extension. Install pgvector:
#   CREATE EXTENSION IF NOT EXISTS vector;
# ⚠️  CHANGE the password below in production — do not use the default!
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mission_control
REDIS_URL=redis://localhost:6379

# ===========================================
# GitHub (Required)
# ===========================================
# Personal Access Token — needed for GitHub MCP tools (issues, PRs, code search).
# Create at: https://github.com/settings/tokens
# Required scopes: repo, read:org
GITHUB_TOKEN=your_github_personal_access_token

# ===========================================
# Telegram (Required for bot interface)
# ===========================================
# Create a bot via @BotFather on Telegram to get the token.
# Get your chat ID by messaging @userinfobot.
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# ===========================================
# LLM — GitHub Copilot SDK (Primary)
# ===========================================
# The Copilot SDK delegates inference to GitHub's infrastructure,
# so no local GPU is needed. Requires `copilot` CLI authenticated in PATH.
# Install: https://docs.github.com/en/copilot/using-github-copilot/using-github-copilot-in-the-command-line
USE_COPILOT_SDK=true
COPILOT_MODEL=gpt-4.1

# ===========================================
# LLM — Optional Fallbacks
# ===========================================
# Groq (cloud fallback — free tier available)
# Sign up: https://console.groq.com
# GROQ_API_KEY=your_groq_api_key

# Ollama (local fallback — only if you have 8GB+ VRAM)
# Install: https://ollama.com
# OLLAMA_HOST=http://localhost:11434

# ===========================================
# DigitalOcean (Optional)
# ===========================================
# For Quill agent to monitor/manage DO resources (Droplets, App Platform, DBs).
# Create at: https://cloud.digitalocean.com/account/api/tokens
# DO_API_TOKEN=your_digitalocean_api_token

# DigitalOcean Spaces (optional — for backups)
# DO_SPACES_KEY=your_spaces_access_key
# DO_SPACES_SECRET=your_spaces_secret_key
# DO_SPACES_BUCKET=mission-control-backups
# DO_SPACES_REGION=nyc3

# ===========================================
# Twilio (Optional — for Pepper agent)
# ===========================================
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=your_twilio_phone_number
# SENDGRID_API_KEY=your_sendgrid_api_key

# ===========================================
# Tavily (Optional — for Fury agent web search)
# ===========================================
# TAVILY_API_KEY=your_tavily_api_key

# ===========================================
# Application
# ===========================================
ENVIRONMENT=development
LOG_LEVEL=INFO
HEARTBEAT_INTERVAL_MINUTES=15

# ===========================================
# Vision Healer — Health Check Configuration
# ===========================================
# GitHub repo for Vision's health alert issues (e.g., "owner/repo-name")
VISION_ISSUE_REPO=

# Comma-separated systemd user services for Vision to monitor.
# Customize this to match YOUR local services. Set empty to disable service checks.
VISION_MONITORED_SERVICES=mc-mcp,mc-api,mc-bot,mc-scheduler

# Thresholds (adjust to your hardware/workflow)
VISION_LOG_MAX_MB=50
VISION_STALE_TASK_HOURS=1.5
VISION_TASK_SOFT_CAP_HOURS=3.0
VISION_TASK_HARD_CAP_HOURS=6.0
VISION_RAM_THRESHOLD_PCT=90
VISION_SWAP_THRESHOLD_PCT=80
